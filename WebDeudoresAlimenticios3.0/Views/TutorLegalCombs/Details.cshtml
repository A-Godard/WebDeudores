@model WebDeudoresAlimenticios3._0.Models.TutorLegalComb

@{
    ViewData["Title"] = "Detalles Tutor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Detalles Deudor</title>

    <!-- Bootstrap Stylesheet -->
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: 'Roboto', sans-serif;
        }
        .container {
            background: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.2);
        }
        h1 {
            color: #ff4444;
        }
        a {
            color: #ff4444;
            text-decoration: none;
        }
        a:hover {
            color: #ff6666;
            text-decoration: underline;
        }
        .btn-primary {
            background-color: #ff4444;
            border: none;
        }
        .btn-primary:hover {
            background-color: #ff6666;
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        <h1>Detalles del Deudor</h1>
        <hr>
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreHijo))</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreHijo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NombreTutor)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreTutor)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ApellidosTutor)</dt>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.ApellidosTutor)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Correo)</dt>
            <dd class="col-sm-9"> @Html.DisplayFor(model => model.Correo)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Direccion)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cedula)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Cedula)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Celular)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Celular)</dd>

            
        </dl>
        <div>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
            <a class="btn btn-secondary" asp-action="Index">Regresar</a>
        </div>
    </div>
</body>
</html>
