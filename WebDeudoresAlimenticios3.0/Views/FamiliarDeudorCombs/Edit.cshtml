@model WebDeudoresAlimenticios3._0.Models.FamiliarDeudorComb

@{
    ViewData["Title"] = "Editar Familiar Deudor";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <title>Editar Deudor</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Iconos y Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilos Personalizados -->
    <link href="css/style.css" rel="stylesheet">
</head>

<body class="bg-dark text-white">

    <div class="container mt-5">
        <h2 class="text-center text-danger">Editar Familia Deudor</h2>
        <hr class="border-danger">

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card bg-secondary text-light p-4">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        

                        <div class="mb-3">
                            <label asp-for="NombreFamiliarDeudor" class="form-label text-danger"></label>
                            <input asp-for="NombreFamiliarDeudor" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="NombreFamiliarDeudor" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Parentesco" class="form-label text-danger"></label>
                            <input asp-for="Parentesco" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="Parentesco" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NombreDeudor" class="form-label text-danger"></label>
                            <input asp-for="NombreDeudor" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="NombreDeudor" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ApellidoDeudor" class="form-label text-danger"></label>
                            <input asp-for="ApellidoDeudor" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="ApellidoDeudor" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Direccion" class="form-label text-danger"></label>
                            <input asp-for="Direccion" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Cedula" class="form-label text-danger"></label>
                            <input asp-for="Cedula" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Celular" class="form-label text-danger"></label>
                            <input asp-for="Celular" class="form-control bg-dark text-white border-danger" />
                            <span asp-validation-for="Celular" class="text-danger"></span>
                        </div>

                        

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Guardar Cambios</button>
                            <a asp-action="Index" class="btn btn-outline-danger">Regresar a la Lista</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/main.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
