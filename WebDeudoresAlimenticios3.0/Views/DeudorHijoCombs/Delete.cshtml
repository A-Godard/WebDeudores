@model WebDeudoresAlimenticios3._0.Models.DeudorHijoComb


@{
    ViewData["Title"] = "Eliminar Deudor";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <title>Eliminar Deudor</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Iconos y Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Estilos Personalizados -->
    <link href="css/style.css" rel="stylesheet">
</head>

<body class="bg-dark text-white">
    <div class="container mt-5">
        <h2 class="text-center text-danger">Eliminar Deudor</h2>
        <p class="text-center">¿Estás seguro de que deseas eliminar este deudor?</p>
        <hr class="border-danger">

        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4" style="background-color: #343a40; border: 1px solid #dc3545;">
                    <h5 class="text-center text-danger"><i class="bi bi-exclamation-triangle"></i> Confirmar Eliminación</h5>

                    <table class="table table-dark border-danger">
                        <tbody>
                            <tr>
                                <th>Padre Deudor</th>
                                <td>@Html.DisplayFor(model => model.PadreDeudor)</td>
                            </tr>
                            <tr>
                                <th>Nombre Hijo</th>
                                <td>@Html.DisplayFor(model => model.NombreHijo)</td>
                            </tr>
                            <tr>
                                <th>Correo</th>
                                <td>@Html.DisplayFor(model => model.Correo)</td>
                            </tr>   
                            <tr>
                                <th>Celular</th>
                                <td>@Html.DisplayFor(model => model.Celular)</td>
                            </tr>
                            
                        </tbody>
                    </table>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="IdHijoDeudor" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a asp-action="Index" class="btn btn-outline-danger">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/main.js"></script>
</body>

</html>
