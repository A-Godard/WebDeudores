@model WebDeudoresAlimenticios3._0.Models.DeudorHijoComb

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Detalles Deudor</title>

    <!-- Bootstrap Stylesheet -->
    <style>
        body {
            background-color: #121212;
            color: #ffffff;
            font-family: 'Roboto', sans-serif;
        }
        .container {
            background: #1e1e1e;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(255, 255, 255, 0.2);
        }
        h1 {
            color: #ff4444;
        }
        a {
            color: #ff4444;
            text-decoration: none;
        }
        a:hover {
            color: #ff6666;
            text-decoration: underline;
        }
        .btn-primary {
            background-color: #ff4444;
            border: none;
        }
        .btn-primary:hover {
            background-color: #ff6666;
        }
    </style>
</head>

<body>
    <div class="container mt-4">
        
            <h4>Deudor Hijo</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PadreDeudor)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PadreDeudor)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.NombreHijo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.NombreHijo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Correo)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Correo)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Celular)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Celular)
                </dd>
            </dl>
        </div>
        <div>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdHijoDeudor">Editar</a>
            <a class="btn btn-secondary" asp-action="Index">Regresar</a>
        </div>

        
    
</body>
</html>





